# Environment
# Use "development" or "production"
ENVIRONMENT=development

# Server
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILENAME=ai-book-seeker.log
MAX_LOG_SIZE=5242880
LOG_BACKUP_COUNT=5

# OpenAI
OPENAI_API_KEY=replace_with_your_openai_key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_PDF_READER_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_CACHE_RESULTS=True
OPENAI_CACHE_EXPIRATION=3600
OPENAI_MAX_TOKENS_CONTEXT=3000
OPENAI_BATCH_SIZE=5

# Vector DB Settings
SKIP_VECTOR_INIT=False  # Set to True to skip embedding creation on startup
CHROMA_PERSIST_DIRECTORY=./chromadb_data
CHROMA_COLLECTION_NAME=book_embeddings

# Database - MySQL
MYSQL_USER=db_user
MYSQL_PASSWORD=db_password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=ai_book_seeker
MYSQL_CONNECTION_STRING=mysql+mysqlconnector://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}

# Redis - For session management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_EXPIRE_SECONDS=7200  # 2 hours
REDIS_MAX_TURNS_TO_STORE=10

# Prompt versions - for versioned prompts
SEARCHER_VERSION=v1
EXPLAINER_VERSION=v1
EXPLANATION_PROMPT_VERSION=v1
SYSTEM_PROMPT_VERSION=v1

# ElevenLabs
ELEVENLABS_WEBHOOK_SECRET=
