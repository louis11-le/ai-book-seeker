# Environment
# Use "development" or "production"
ENVIRONMENT=development

# Server
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Enable file logging
LOGGING_ENABLE_FILE_LOGGING=true
LOGGING_LOG_DIRECTORY=./logs
LOGGING_LOG_FILENAME=ai_book_seeker.log
LOGGING_ERROR_LOG_FILENAME=ai_book_seeker_error.log

# Log rotation settings
LOGGING_MAX_FILE_SIZE_MB=10
LOGGING_BACKUP_COUNT=5

# Console logging
LOGGING_ENABLE_CONSOLE_LOGGING=true

# Log level (INFO, DEBUG, WARNING, ERROR)
LOGGING_LEVEL=INFO

# OpenAI
OPENAI_API_KEY=replace_with_your_openai_key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_PDF_READER_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_CACHE_RESULTS=True
OPENAI_CACHE_EXPIRATION=3600
OPENAI_MAX_TOKENS_CONTEXT=3000
OPENAI_BATCH_SIZE=5

# Vector DB Settings
STARTUP_SKIP_VECTOR_INIT=False  # Set to True to skip embedding creation on startup
CHROMADB_BOOK_PERSIST_DIRECTORY=./chromadb_books
CHROMADB_BOOK_COLLECTION_NAME=books_collection

CHROMADB_FAQ_PERSIST_DIRECTORY=./chromadb_faq
CHROMADB_FAQ_COLLECTION_NAME=fqa_collection

# Database - MySQL
DB_USERNAME=db_user
DB_PASSWORD=db_password
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=ai_book_seeker
DB_URL=mysql+mysqlconnector://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}
DB_ECHO_SQL=true

# Redis - For session management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_EXPIRE_SECONDS=7200  # 2 hours
REDIS_MAX_TURNS_TO_STORE=10

# Prompt versions - for versioned prompts
PROMPT_SEARCHER_VERSION=v1
PROMPT_SYSTEM_PROMPT_VERSION=v1
PROMPT_EXPLAINER_VERSION=v1

# ElevenLabs
X_API_KEY=webhook
